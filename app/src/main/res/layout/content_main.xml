<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.chooser.nti.ntichooser.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/randomizeButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/priceBox"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:text="Randomize"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="280dp" />

    <TextView
        android:id="@+id/snackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:text="Drinkize!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:visibility="visible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="Header" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snackText"
        android:layout_centerHorizontal="true"
        android:text="+"
        android:textAlignment="center"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/drinkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="34sp"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="138dp" />

    <TextView
        android:id="@+id/priceBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drinkText"
        android:layout_centerHorizontal="true"
        android:text="Pris"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="198dp" />

    <Switch
        android:id="@+id/mjölkSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/randomizeButton"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="73dp"
        android:layout_toLeftOf="@+id/nutSwitch"
        android:layout_toStartOf="@+id/nutSwitch"
        android:text="Icke Mjölk"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="428dp" />

    <Switch
        android:id="@+id/nutSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mjölkSwitch"
        android:layout_alignBottom="@+id/mjölkSwitch"
        android:layout_centerHorizontal="true"
        android:text="Icke Nötter"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="428dp" />

    <Switch
        android:id="@+id/glutenSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nutSwitch"
        android:layout_alignBottom="@+id/nutSwitch"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="Icke Gluten"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="428dp" />

</RelativeLayout>
